# Docker Compose Environment
# Set CANDIDACY_ENV to control log verbosity across all services:
#   - development (default): APP_DEBUG=true, LOG_LEVEL=debug (verbose logging)
#   - production: APP_DEBUG=false, LOG_LEVEL=error (minimal logging)
CANDIDACY_ENV=development
LOG_LEVEL=debug
LOG_CHANNEL=stack

# Application
APP_NAME="Candidate Tracking System"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=candidacy
DB_USERNAME=root
DB_PASSWORD=root

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# AI Configuration
AI_PROVIDER=ollama  # ollama or openrouter
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=mistral
OPENROUTER_API_KEY=
OPENROUTER_MODEL=

# Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@candidacy.com
MAIL_FROM_NAME="${APP_NAME}"

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:8080
CANDIDATE_SERVICE_URL=http://candidate-service:8080
VACANCY_SERVICE_URL=http://vacancy-service:8080
AI_SERVICE_URL=http://ai-service:8080
MATCHING_SERVICE_URL=http://matching-service:8080
INTERVIEW_SERVICE_URL=http://interview-service:8080
OFFER_SERVICE_URL=http://offer-service:8080
ONBOARDING_SERVICE_URL=http://onboarding-service:8080
REPORTING_SERVICE_URL=http://reporting-service:8080
ADMIN_SERVICE_URL=http://admin-service:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8080

# Frontend Configuration
VITE_API_GATEWAY_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080/api

# Monitoring & Logging
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false

# Notes:
# - Each service has its own database (candidacy_auth, candidacy_candidate, etc.)
# - Database credentials are configured in docker-compose.yml
# - Service-specific settings can be overridden in each service's .env file
# - For production, set CANDIDACY_ENV=production and APP_DEBUG=false
