//==============================================================================
// ONBOARDING SERVICE DATABASE (candidacy_onboarding)
//==============================================================================

Table onboarding_checklists {
  id bigint [pk, increment]
  tenant_id bigint [not null, note: 'Logical FK to tenants table']
  candidate_id bigint [not null]
  task_name varchar(255) [not null]
  description text [null]
  status varchar(255) [default: 'pending', not null]
  due_date date [null]
  completed_at timestamp [null]
  notes text [null]
  order int [default: 0, not null]
  created_at timestamp [null]
  updated_at timestamp [null]
  
  indexes {
    tenant_id [name: 'idx_onboarding_tenant_id']
    candidate_id [name: 'idx_onboarding_candidate_id']
    status [name: 'idx_onboarding_status']
    (tenant_id, status) [name: 'idx_onboarding_tenant_status']
  }
  
  Note: '''
    Onboarding tasks and checklists for new hires
    Statuses: pending, in_progress, completed
    Logical FK to candidate service
  '''
}
